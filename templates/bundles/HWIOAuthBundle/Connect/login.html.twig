{% extends '@HWIOAuth/layout.html.twig' %}

{% block hwi_oauth_content %}
    <div class="text-center">
        {% if error is defined and error %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
        {% endif %}
        {% for owner in hwi_oauth_resource_owners() %}
            {% if owner == 'eve_online' %}
                <a href="{{ hwi_oauth_login_url(owner) }}"><img src="https://web.ccpgamescdn.com/eveonlineassets/developers/eve-sso-login-black-large.png"></a>
            {% else %}
                <a class="btn btn-primary" href="{{ hwi_oauth_login_url(owner) }}" role="button">{{ owner | trans({}, 'HWIOAuthBundle') }}</a>
            {% endif %}
        {% endfor %}
    </div>
{% endblock hwi_oauth_content %}

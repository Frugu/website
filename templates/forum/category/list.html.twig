<ul class="list-group">
    {% for category in categories %}
        {% include 'forum/category/row.html.twig' with {'category': category, 'class': 'list-group-item-warning', 'type': 'group'} only %}
        {% for forum in category.getChildren %}
            {% include 'forum/category/row.html.twig' with {'category': forum, 'type': 'forum'} only %}
        {% endfor %}

        {% if category.getChildren|length > 0 and category.getConversations|length > 0 %}
            <li class="list-group-item list-group-item-secondary">
                Conversations
            </li>
        {% endif %}

        {% for conversation in category.getConversations %}
            {% include 'forum/conversation/row.html.twig' with {'conversation': conversation} only %}
        {% endfor %}
    {% endfor %}
</ul>
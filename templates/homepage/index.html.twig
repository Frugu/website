{% extends 'layout/base.html.twig' %}

{% block body %}
    <ul class="list-group">
        {% for category in categories %}
            <li class="list-group-item list-group-item-warning">{{ category.getName }}</li>
            {% for forum in category.getChildren %}
                <li class="list-group-item">
                    {{ forum.getName }}
                    <br/><span class="text-muted">{{ forum.getDescription }}</span>
                </li>
            {% endfor %}
        {% endfor %}
    </ul>
{% endblock %}
